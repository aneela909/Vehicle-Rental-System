    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String cName = jTextField1.getText();
        String cCnic = jTextField2.getText();
        String cContact = jTextField3.getText();
        String cEmail = jTextField4.getText();
        String cAddress = jTextField5.getText();

        String vType = jTextField6.getText();
        String vModel = jTextField7.getText();
        String vRegNo = jTextField8.getText();
        String vSeatingCapacity = jTextField14.getText();

        String bLocation = jTextField10.getText();
        String bDestination = jTextField11.getText();
        String bRent = jTextField12.getText();

        String dName = jTextField9.getText();
        String dCnic = jTextField13.getText();

        boolean carFound = false;
        boolean carBooked = false;
        File carFile = new File("C:\\Users\\HP\\Desktop\\New folder\\Cars.txt"); //Cars file path
        try {
            FileReader carFileReader = new FileReader(carFile);
            BufferedReader carBufferedReader = new BufferedReader(carFileReader);
            String line;
            while ((line = carBufferedReader.readLine()) != null) {
                String[] carData = line.split(",");
                if (carData[0].equals(vRegNo)) {
                    
                    carFound = true;
                    File bookingFile = new File("C:\\Users\\HP\\Desktop\\New folder\\Bookings.txt");//Bookings file path
                    FileReader bookingFileReader = new FileReader(bookingFile);
                    BufferedReader bookingBufferReader = new BufferedReader(bookingFileReader);
                    String bookingLine;
                    while ((bookingLine = bookingBufferReader.readLine()) != null) {
                        String[] bookingData = bookingLine.split(",");
                        if (bookingData[7].equals(vRegNo)) {
                            carBooked = true;
                            break;
                        }
                    }
                    bookingBufferReader.close();
                    break;
                }
            }
            carBufferedReader.close();
        } catch (IOException e) {
        }

        if (!carFound) {
            JOptionPane.showMessageDialog(this, "Car not found.", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        if (carBooked) {
            JOptionPane.showMessageDialog(this, "Car not available right now.", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        boolean driverFound = false;
        boolean driverBooked = false;
        File driverFile = new File("C:\\Users\\HP\\Desktop\\New folder\\Drivers.txt");//Drivers file path
        try {
            FileReader driverFileReader = new FileReader(driverFile);
            BufferedReader driverBufferReader = new BufferedReader(driverFileReader);
            String line;
            while ((line = driverBufferReader.readLine()) != null) {
                String[] driverData = line.split(",");
                if (driverData[1].equals(dCnic)) {
                    driverFound = true;
                    File bookingFile = new File("C:\\Users\\HP\\Desktop\\New folder\\Bookings.txt");//Bookings file path
                    FileReader bookingFileReader = new FileReader(bookingFile);
                    BufferedReader bookingReader = new BufferedReader(bookingFileReader);
                    String bookingLine;
                    while ((bookingLine = bookingReader.readLine()) != null) {
                        String[] bookingData = bookingLine.split(",");
                        if (bookingData[12].equals(dCnic)) {
                            driverBooked = true;
                            break;
                        }
                    }
                    bookingReader.close();
                    break;
                }
            }
            driverBufferReader.close();
        } catch (IOException e) {
        }

        if (!driverFound) {
            JOptionPane.showMessageDialog(this, "Driver not found.", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        if (driverBooked) {
            JOptionPane.showMessageDialog(this, "Driver is busy.", "Error", JOptionPane.ERROR_MESSAGE);
            return;
        }

        Booking booking = new Booking(cName, cCnic, cContact, cEmail, cAddress,
                vType, vModel, vRegNo, vSeatingCapacity,
                bLocation, bDestination, bRent,
                dName, dCnic);
        Booking.saveBooking(booking);

        JOptionPane.showMessageDialog(this, "Booking confirmed!", "Success", JOptionPane.INFORMATION_MESSAGE);
        jTextField1.setText("");
        jTextField2.setText("");
        jTextField3.setText("");
        jTextField4.setText("");
        jTextField5.setText("");

        jTextField6.setText("");
        jTextField7.setText("");
        jTextField8.setText("");
        jTextField14.setText("");

        jTextField10.setText("");
        jTextField11.setText("");
        jTextField12.setText("");

        jTextField9.setText("");
        jTextField13.setText("");

    }                                        

